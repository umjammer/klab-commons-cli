<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.klab</groupId>
  <artifactId>klab-commons-cli</artifactId>
  <packaging>jar</packaging>
  <version>1.3.0</version>
  <name>klab-commons-cli</name>
  <description>KLab CLI Annotation Laibrary

1.3.0

    use ServiceLoader for default provider
    add withValueSeparator
    modify dealing with boolean value

TODO

    add group functionality?
    add default value? (just set values into fields?)</description>
  <url>https://github.com/umjammer/klab-commons-cli</url>
  <inceptionYear>2008</inceptionYear>
  <distributionManagement>
    <repository>
      <id>internal.repo</id>
      <name>Temporary Staging Repository</name>
      <url>file://${project.build.directory}/mvn-repo</url>
    </repository>
  </distributionManagement>
  <build>
    <finalName>klab-commons-cli</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.5</version>
      <scope>test</scope>
      <optional>false</optional>
    </dependency>
    <dependency>
      <groupId>com.github.umjammer</groupId>
      <artifactId>vavi-commons</artifactId>
      <version>1.0.6</version>
      <optional>false</optional>
    </dependency>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.2</version>
      <optional>false</optional>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
      <optional>false</optional>
    </dependency>
  </dependencies>
  <scm>
    <url>https://github.com/umjammer/klab-commons-cli</url>
  </scm>
  <issueManagement>
    <url>https://github.com/umjammer/klab-commons-cli/issues</url>
  </issueManagement>
  <organization>
    <name>KLab Inc.</name>
    <url>http://www.klab.com</url>
  </organization>
</project>
